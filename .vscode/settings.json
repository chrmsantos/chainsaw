{
  // GitHub Copilot - Auto Approve Settings
  "github.copilot.editor.enableAutoCompletions": true,

  // Copilot Chat - Auto Approve todas as edições
  "github.copilot.chat.autoApprove": true,

  // Configurações adicionais do Copilot
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": true,
    "markdown": true,
    "powershell": true,
    "bat": true,
    "cmd": true
  },

  // Editor
  "editor.formatOnSave": false,
  "editor.formatOnPaste": false,
  "editor.formatOnType": false,
  "editor.wordWrap": "on",
  "files.encoding": "utf8",
  "files.autoSave": "off",

  // PowerShell - FORMATACAO DESABILITADA PARA PREVENIR CORRUPCAO
  "powershell.codeFormatting.preset": "None",
  "powershell.codeFormatting.autoCorrectAliases": false,
  "powershell.codeFormatting.useCorrectCasing": false,
  "powershell.scriptAnalysis.enable": false,
  "powershell.integratedConsole.showOnStartup": false,
  "[powershell]": {
    "editor.formatOnSave": false,
    "editor.formatOnPaste": false,
    "editor.formatOnType": false,
    "editor.defaultFormatter": null
  },

  // Arquivos
  "files.associations": {
    "*.bas": "vb",
    "*.cmd": "bat",
    "*.dotm": "plaintext"
  },

  // Exclusões
  "files.exclude": {
    "**/.git": false
  },
  "files.readonlyInclude": {
    "{**/.c4z/.extsrcs/*.PROTSYM.cbl,**/.c4z/.extsrcs/*.PROTSYM.listing}": true
  }
}
